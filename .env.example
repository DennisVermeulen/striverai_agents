# Required: Anthropic API key for Claude Computer Use
ANTHROPIC_API_KEY=sk-ant-...

# LLM settings (anthropic or ollama)
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MAX_TOKENS=4096

# Ollama settings (when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2-vision

# Browser settings
BROWSER_WIDTH=1280
BROWSER_HEIGHT=800
SCREENSHOT_MAX_DIMENSION=1568

# Agent settings
AGENT_MAX_STEPS=50
AGENT_STEP_DELAY=0.5

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Display settings (for Xvfb inside Docker)
DISPLAY_NUM=99
